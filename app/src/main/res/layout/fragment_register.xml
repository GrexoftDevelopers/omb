<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oneminutebefore.workout.RegisterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:clipToPadding="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:textAppearance="?android:attr/textAppearanceSearchResultTitle"
            android:textAllCaps="true"
            />


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentPadding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text|textNoSuggestions|textCapWords"
                        android:hint="@string/first_name_asterisk"
                        android:textColorHint="@color/text_hint_color"
                        android:textColor="@color/text_type_color"
                        android:textSize="@dimen/text_size_large" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:textColorHint="@color/text_hint_color"
                        android:textColor="@color/text_type_color"
                        android:hint="@string/email_asterisk"
                        android:textSize="@dimen/text_size_large" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColorHint="@color/text_hint_color"
                        android:textColor="@color/text_type_color"
                        android:hint="@string/phone_asterisk"
                        android:textSize="@dimen/text_size_large" />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/text_hint_color"
                        android:textColor="@color/text_type_color"
                        android:inputType="textPassword"
                        android:hint="@string/password_asterisk"
                        android:textSize="@dimen/text_size_large" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_time_zone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_time_zone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords|text"
                        android:textColorHint="@color/text_hint_color"
                        android:textColor="@color/text_type_color"
                        android:hint="@string/time_zone_asterisk"
                        android:textSize="@dimen/text_size_large" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/time_zone_example"
                    android:textColor="@color/text_heading"
                    android:textSize="@dimen/text_size_normal" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/level_asterisk"
                        android:imeOptions="actionUnspecified"
                        android:inputType="text|textCapWords"
                        android:textColorHint="@color/text_hint_color"
                        android:textColor="@color/text_type_color"
                        android:textSize="@dimen/text_size_large" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/level_example"
                    android:textColor="@color/text_heading"
                    android:textSize="@dimen/text_size_normal" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_reference_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_reference_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/reference_code"
                        android:imeActionId="@+id/register"
                        android:imeActionLabel="@string/register"
                        android:imeOptions="actionUnspecified"
                        android:inputType="text|textCapWords"
                        android:textColorHint="@color/text_hint_color"
                        android:textColor="@color/text_type_color"
                        android:textSize="@dimen/text_size_large" />

                </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_marginTop="@dimen/margin_padding_10dp">


                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"/>

                <Button
                    android:id="@+id/btn_register"
                    style="@style/Base.Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/register"
                    android:textSize="@dimen/text_size_xl"
                    android:textStyle="bold"/>

            </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:contentPadding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_padding_5dp"
                    android:text="@string/have_login"
                    android:textColor="@color/text_heading"
                    android:textSize="@dimen/text_size_normal"
                    android:gravity="center_horizontal"/>

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_padding_10dp"
                    android:text="@string/action_sign_in_short"
                    android:textSize="@dimen/text_size_xl" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
