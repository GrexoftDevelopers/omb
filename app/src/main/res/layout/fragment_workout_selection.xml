<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.oneminutebefore.workout.WorkoutSelectionFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:text="@string/select_workout"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_padding_12dp"
        android:textAppearance="?attr/textAppearanceSearchResultTitle"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:id="@+id/tv_title"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:tabSelectedTextColor="@android:color/white"
        app:tabTextColor="@color/divider_color"
        app:tabIndicatorHeight="2dp"
        android:layout_below="@+id/tv_title"
        app:tabIndicatorColor="@android:color/white"></android.support.design.widget.TabLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/tab_layout"></android.support.v4.view.ViewPager>

</RelativeLayout>
